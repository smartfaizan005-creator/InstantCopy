<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:contentDescription="@string/accessibility_settings_screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/settings_title" />

    <!-- Master Enable Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/accessibility_master_toggle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/master_switch"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/master_enable_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:contentDescription="@string/master_enable_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/master_enable_description"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp"
                    android:contentDescription="@string/master_enable_description" />
            </LinearLayout>

            <Switch
                android:id="@+id/master_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/accessibility_master_toggle" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Sensitivity Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/sensitivity_card"
        android:contentDescription="@string/accessibility_sensitivity_slider">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/sensitivity_value"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensitivity_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:contentDescription="@string/sensitivity_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensitivity_description"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp"
                    android:contentDescription="@string/sensitivity_description" />
            </LinearLayout>

            <TextView
                android:id="@+id/sensitivity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="1000ms"
                android:textSize="16sp"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:contentDescription="Current sensitivity value 1000 milliseconds" />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/sensitivity_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="2900"
            android:progress="900"
            android:contentDescription="@string/accessibility_sensitivity_slider_desc" />
    </LinearLayout>

    <!-- Auto-start Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/accessibility_auto_start_toggle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/auto_start_switch"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_start_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:contentDescription="@string/auto_start_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_start_description"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp"
                    android:contentDescription="@string/auto_start_description" />
            </LinearLayout>

            <Switch
                android:id="@+id/auto_start_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/accessibility_auto_start_toggle" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:contentDescription="@string/accessibility_status_card">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_settings_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/current_settings_title" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:paddingEnd="8dp"
                    android:contentDescription="Status:" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_disabled"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:contentDescription="Status: Disabled" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensitivity:"
                    android:paddingEnd="8dp"
                    android:contentDescription="Sensitivity:" />

                <TextView
                    android:id="@+id/status_sensitivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000ms"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:contentDescription="Sensitivity: 1000 milliseconds" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-start:"
                    android:paddingEnd="8dp"
                    android:contentDescription="Auto-start:" />

                <TextView
                    android:id="@+id/status_auto_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_off"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:contentDescription="Auto-start: Off" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>